    <div id="root1" class="hidden-xs"></div>
    <div id="root1fade" class="hidden-xs"></div>
    <div id="root2" class="hidden-xs"></div>
    <div id="root2fade" class="hidden-xs"></div>
    <div id="root3" class="hidden-xs"></div>
    <div id="root3fade" class="hidden-xs"></div>
    <p>
      <!-- Begin MailChimp Signup Form -->
      <div id="mc_embed_signup">
        <form action="//meetmangrove.us12.list-manage.com/subscribe/post?u=102638a04246423d07cc940f6&amp;id=fe4537fefc" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="form-inline" target="_blank" novalidate>
